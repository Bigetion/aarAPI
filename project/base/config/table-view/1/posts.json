{
  "title": "Posts",
  "primary_key": "id",
  "columns": [
    {
      "text": "Title",
      "value": "title",
      "sortable": true,
      "align": "left"
    },
    {
      "text": "Title Slug",
      "value": "title_slug",
      "sortable": true,
      "align": "left"
    },
    {
      "text": "Description",
      "value": "description",
      "sortable": true,
      "align": "left"
    }
  ],
  "query": {
    "table": "posts",
    "column": [
      "id",
      "title",
      "title_slug",
      "content",
      "description",
      "image",
      "created_at",
      "updated_at"
    ],
    "sub_query": [
      {
        "key": "categories",
        "table": "post_category",
        "foreign_key": "post_id",
        "target_key": "id",
        "column": [
          "post_category.post_id",
          "post_category.category_id",
          "categories.name"
        ],
        "join": {
          "[>]categories": { "post_category.category_id": "id" }
        }
      }
    ]
  }
}
