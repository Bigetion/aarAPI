{
  "title": "Posts",
  "primary_key": "id",
  "columns": [
    {
      "text": "Title",
      "value": "title",
      "sortable": true,
      "align": "left"
    },
    {
      "text": "Title Slug",
      "value": "title_slug",
      "sortable": true,
      "align": "left"
    },
    {
      "text": "Description",
      "value": "description",
      "sortable": true,
      "align": "left"
    }
  ],
  "query": {
    "table": "posts",
    "column": [
      "id",
      "title",
      "title_slug",
      "content",
      "description",
      "image",
      "created_by",
      "created_at",
      "updated_at"
    ],
    "sub_query": [
      {
        "column_id": "categories",
        "table": "post_category",
        "column": [
          "post_category.post_id",
          "post_category.category_id(id)",
          "categories.name"
        ],
        "join": {
          "[>]categories": { "post_category.category_id": "id" }
        },
        "foreign_key": "post_id",
        "reference_column": "id"
      },
      {
        "column_id": "tags",
        "table": "post_tag",
        "column": ["post_tag.post_id", "post_tag.tag_id(id)", "tags.name"],
        "join": {
          "[>]tags": { "post_tag.tag_id": "id" }
        },
        "foreign_key": "post_id",
        "reference_column": "id"
      },
      {
        "column_id": "author",
        "table": "users",
        "column": ["users.id_user", "users.name"],
        "foreign_key": "id_user",
        "reference_column": "created_by"
      }
    ]
  }
}
